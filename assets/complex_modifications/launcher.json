{
   "rules": [
      {
         "description": "Launch: Browser",
         "manipulators": [
            {
               "from": {
                  "modifiers": {
                     "mandatory": [
                        "left_shift",
                        "left_control",
                        "left_option",
                        "left_command"
                     ]
                  },
                  "simultaneous": [
                     {
                        "key_code": "p"
                     },
                     {
                        "key_code": "w"
                     }
                  ],
                  "simultaneous_options": {
                     "key_down_order": "strict"
                  }
               },
               "parameters": {
                  "basic.simultaneous_threshold_milliseconds": 500
               },
               "to": {
                  "shell_command": "export MOZ_DISABLE_SAFE_MODE_KEY=1; open /Applications/Firefox.app"
               },
               "type": "basic"
            }
         ]
      },
      {
         "description": "Launch: Terminal",
         "manipulators": [
            {
               "from": {
                  "modifiers": {
                     "mandatory": [
                        "left_shift",
                        "left_control",
                        "left_option",
                        "left_command"
                     ]
                  },
                  "simultaneous": [
                     {
                        "key_code": "p"
                     },
                     {
                        "key_code": "x"
                     }
                  ],
                  "simultaneous_options": {
                     "key_down_order": "strict"
                  }
               },
               "parameters": {
                  "basic.simultaneous_threshold_milliseconds": 500
               },
               "to": {
                  "shell_command": "open /Applications/WezTerm.app"
               },
               "type": "basic"
            }
         ]
      }
   ],
   "title": "Launch Applications"
}
